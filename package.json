{
  "name": "playtui-monorepo",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '*' build",
    "dev": "bun run --cwd packages/playtui dev",
    "flipbook:demo": "bun run --cwd packages/flipbook/src cli.tsx --demo",
    "pub:flipbook": "cd packages/flipbook && npm publish",
    "pub:playtui": "cd packages/playtui && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spoons-and-mirrors/playtui.git"
  },
  "homepage": "https://github.com/spoons-and-mirrors/playtui#readme",
  "bugs": {
    "url": "https://github.com/spoons-and-mirrors/playtui/issues"
  },
  "author": "spoon",
  "license": "MIT",
  "dependencies": {
    "@opentui/core": "^0.1.60",
    "@opentui/react": "^0.1.60"
  },
  "devDependencies": {
    "typescript": "^5.9.3"
  }
}
