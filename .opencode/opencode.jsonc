{
	"$schema": "https://opencode.ai/config.json",
	"instructions": [".opencode/instructions/*.md"],
	"mcp": {
		"context7": {
			"enabled": true,
			"type": "local",
			"command": ["npx", "-y", "@upstash/context7-mcp"]
		},
		"gh_grep": {
			"enabled": false,
			"type": "remote",
			"url": "https://mcp.grep.app"
		},
		"deepwiki": {
			"enabled": false,
			"type": "remote",
			"url": "https://mcp.deepwiki.com/sse"
		}
	},
	"agent": {
		"general": {
			//"model": "zai-coding-plan/glm-4.6"
		},
		"build": {
			//"model": "zai-coding-plan/glm-4.6"
		}
	},
	"tui": {
		"scroll_speed": 10
	},
	"small_model": "github-copilot/gpt-4.1",
	"username": "spoon",
	"provider": {
		"github-copilot": {
			"models": {
				"gpt-5-mini": {
					"name": "GPT-5 Mini",
					"options": {
						"reasoningEffort": "medium",
						"textVerbosity": "low"
					}
				},
				"claude-opus-4.5": {
					"name": "Claude Opus 4.5",
					"limit": {
						"context": 256000,
						"output": 64000
					}
				},
				"gpt-5.1": {
					"name": "GPT-5.1",
					"limit": {
						"context": 256000,
						"output": 256000
					},
					"options": {
						"reasoningEffort": "medium",
						"textVerbosity": "low"
						//"reasoningSummary": "auto",
						//"include": ["reasoning.encrypted_content"],
						//"store": false
					}
				},
				"gpt-5.2": {
					"name": "GPT-5.2",
					"limit": {
						"context": 256000,
						"output": 256000
					},
					"options": {
						"reasoningEffort": "medium",
						"textVerbosity": "low"
						//"reasoningSummary": "auto",
						//"include": ["reasoning.encrypted_content"],
						//"store": false
					}
				}
			}
		}
	},

	 "experimental": {
	 "batch_tool": false,
	// 	"mcp_registry": false,
	// 	"primary_tools": ["prune"]
	 },

	
}
