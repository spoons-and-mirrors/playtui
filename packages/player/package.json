{
  "name": "@playtui/player",
  "version": "0.1.0",
  "type": "module",
  "description": "Standalone player for TUI animations created with PlayTUI",
  "bin": {
    "playtui-player": "dist/cli.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/cli.tsx src/index.ts --outdir dist --target bun --minify && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spoons-and-mirrors/playtui.git",
    "directory": "packages/player"
  },
  "homepage": "https://github.com/spoons-and-mirrors/playtui/tree/main/packages/player#readme",
  "bugs": {
    "url": "https://github.com/spoons-and-mirrors/playtui/issues"
  },
  "keywords": [
    "tui",
    "terminal",
    "animation",
    "player",
    "opentui",
    "playtui",
    "cli"
  ],
  "author": "spoon",
  "license": "MIT",
  "dependencies": {
    "@opentui/core": "latest",
    "@opentui/react": "latest",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/react": "^19.0.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@opentui/core": "*",
    "@opentui/react": "*",
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@opentui/core": {
      "optional": true
    },
    "@opentui/react": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
