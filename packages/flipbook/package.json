{
  "name": "@playtui/flipbook",
  "version": "0.0.1",
  "type": "module",
  "description": "Terminal animation player for TUI animations created with PlayTUI",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "flipbook": "dist/cli.js"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "demo.tsx"
  ],
  "scripts": {
    "build": "bun run build:cli && bun run build:lib && bun run build:types",
    "build:cli": "bun build src/cli.tsx --outdir dist --target bun --minify",
    "build:lib": "bun build src/index.ts --outdir dist --target bun --minify --external react --external react/jsx-runtime --external react/jsx-dev-runtime",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spoons-and-mirrors/playtui.git",
    "directory": "packages/flipbook"
  },
  "homepage": "https://github.com/spoons-and-mirrors/playtui/tree/main/packages/flipbook#readme",
  "bugs": {
    "url": "https://github.com/spoons-and-mirrors/playtui/issues"
  },
  "keywords": [
    "tui",
    "terminal",
    "animation",
    "player",
    "opentui",
    "playtui",
    "cli"
  ],
  "author": "spoon",
  "license": "MIT",
  "dependencies": {
    "@opentui/core": "latest",
    "@opentui/react": "latest"
  },
  "peerDependencies": {
    "react": "^19.2.3"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/react": "^19.2.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
